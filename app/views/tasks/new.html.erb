<h1>Add a task</h1>

<% if flash[:alert] %>
  <p style="color: red; font-size: 16px; font-weight: bold;"><%= flash[:alert] %></p>
<% end %>

<%= form_for @task, url: task_list_tasks_path(task_list_id: @task_list.id) do |f| %>

  <p>
    <p style="color:red; font-weight: bold"><%= @task.errors[:description].first.capitalize if @task.errors[:description] != [] %></p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p style="color:red; font-weight: bold"><%= @task.errors[:due_date].first if @task.errors[:due_date] != [] %></p>
  <p>
    <%= f.label :due_date %><br>
    <%= f.date_select :due_date %><br>
  </p>

  <p style="color:red; font-weight: bold"><%= @task.errors[:assigned_to].first if @task.errors[:assigned_to] != [] %></p>

    <div style="display:inline-block">
      <%= f.label :assigned_to %><br>
      <%= f.collection_select(:assigned_to, @users, :name, :name, {include_blank: true} ) %>
    </div>
    <div style="display: inline-block">
      <%= f.label :assigned_to %><br>
      <%= f.collection_select(:assigned_to_2, @users, :name, :name, {include_blank: true} ) %>
    </div>
    <div style="display: inline-block">
      <%= f.label :assigned_to %><br>
      <%= f.collection_select(:assigned_to_3, @users, :name, :name, {include_blank: true} ) %>
    </div>
    <div style="display: inline-block">
      <%= f.label :assigned_to %><br>
      <%= f.collection_select(:assigned_to_4, @users, :name, :name, {include_blank: true} ) %>
    </div>
  <br><br>

  <%= f.submit "Create Task", id: "create-task-button" %>
<% end %>
