<% if flash[:alert] %>
  <p style="color: red; font-size: 16px; font-weight: bold;"><%= flash[:alert] %></p>
<% end %>

<%= form_for @task_list, url: path, method: httpmethod  do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <%= f.submit "#{type} Task List" %>
<% end %>